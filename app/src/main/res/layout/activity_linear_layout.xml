<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


  <LinearLayout  android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:orientation="horizontal">
    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
      <!-- SeekBar -->
      <TextView
          android:id="@+id/txt_vuong1"
          android:layout_width="119dp"
          android:layout_height="196dp"
          android:background="#EAE3A7" />

      <TextView
          android:id="@+id/txt_vuong2"
          android:layout_width="120dp"
          android:layout_height="193dp"
          android:background="#DABF6E" />
    </LinearLayout>
    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

      <TextView
          android:id="@+id/txt_vuong3"
          android:layout_width="300dp"
          android:layout_height="130dp"
          android:background="#EA961B" />

      <TextView
          android:id="@+id/txt_vuong4"
          android:layout_width="300dp"
          android:layout_height="130dp"
          android:background="#BFBBAF" />

      <TextView
          android:id="@+id/txt_vuong5"
          android:layout_width="300dp"
          android:layout_height="129dp"
          android:background="#676855" />
    </LinearLayout>
  </LinearLayout>



  <SeekBar
      android:id="@+id/seekBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:max="255"
      android:progress="128"
      android:layout_marginTop="16dp"/>

</LinearLayout>